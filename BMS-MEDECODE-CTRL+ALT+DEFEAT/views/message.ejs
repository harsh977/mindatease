<%- include('header.ejs') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .inputform{
            font-family: Arial, sans-serif;
            display: flex;
            margin: 100px;
        }

        .form-container {
            width: 80%;
            max-width: 400px; /* Adjust as needed */
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
            margin-bottom: 8px;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .inputform button {
            width: 100%;
            padding: 12px;
            background-color: #4682A9;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #35719E;
        }
        .box {
            width: 400px;
            padding: 20px;
            border: 2px solid #4682A9;
            border-radius: 8px;
            background-color: #ffffff;
            margin:100px;
        }

        .box-header {
            font-weight: bold;
            color: #4682A9;
        }

        .box-content {
            font-size: 14px;
            line-height: 1.6;
        }

        .twitter-like-content {
            border-left: 3px solid #4682A9;
            padding-left: 10px;
            margin-top: 10px;
            font-style: italic;
        }
    </style>
</head>
<body>
    <div class="inputform">
    <form action="/submitmessage" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>
        
        <label for="email">Email (example@gmail.com):</label>
        <input type="email" id="email" name="email" pattern="[a-z0-9._%+-]+@gmail\.com$" title="Enter a valid Gmail address" required>

        <label for="dob">Date of Birth:</label>
        <input type="date" id="dob" name="dob" required>

        <label for="tweet">Tweet (maximum 250 words):</label>
        <textarea id="tweet" name="tweet" rows="4" maxlength="250" required></textarea>

        <button type="submit">Submit</button>
    </form>
</div>
<hr>
<% if(locals.name){ %>
    <div class="box">
        <div class="box-header">Name</div>
        <div class="box-content"><%= name %></div>
    
        <div class="box-header">Email</div>
        <div class="box-content"><%= email %></div>
    
        <div class="box-header">Content</div>
        <div class="box-content twitter-like-content">
           <%= content %>
        </div>
    </div>
<% } %>
<hr>
</body>
</html>